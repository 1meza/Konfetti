<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    android:fitsSystemWindows="true">

    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="500dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <Button
            android:id="@+id/buttonSectionBurstFromTop"
            style="@style/PsButton"
            android:text="PS1" />

        <Button
            android:id="@+id/buttonSectionDragAndBurst"
            style="@style/PsButton"
            android:text="PS2" />

        <Button
            android:id="@+id/buttonSectionStreamFromCenter"
            style="@style/PsButton"
            android:text="PS3" />

    </LinearLayout>

    <nl.dionsegijn.konfettidemo.configurations.ConfigurationControlsWidget
        android:id="@+id/viewConfigurationControls"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="48dp"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior" />

</android.support.design.widget.CoordinatorLayout>
